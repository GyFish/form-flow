<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.gyfish.formflow.dao.AppDao">

    <resultMap id="appMap" type="com.gyfish.formflow.domain.AppInfo">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <id column="form_id" property="formId" jdbcType="INTEGER"/>
        <id column="process_id" property="processId" jdbcType="INTEGER"/>
        <id column="title" property="title" jdbcType="VARCHAR"/>
        <id column="description" property="description" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="findAll" resultMap="appMap">
        select *
        from `app`
        limit 0, 100
    </select>

    <insert id="saveApp" parameterType="com.gyfish.formflow.domain.AppInfo">
        insert into `app` (form_id, process_id, title, description)
        values (#{formId}, #{processId}, #{title}, #{description})
    </insert>

    <delete id="deleteApp" parameterType="int">
        delete from `app` where id = #{appId}
    </delete>

</mapper>