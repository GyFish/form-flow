<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gyfish.formflow.dao.UserMapper">

    <!-- 返回字段定义 -->
    <resultMap id="BaseResultMap" type="com.gyfish.formflow.domain.AppUser">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 表字段 -->
    <sql id="Base_Column_List">
        id, user_id, user_name
    </sql>

    <!-- 插入一条记录，返回自增主键 -->
    <insert id="insert"
            parameterType="com.gyfish.formflow.domain.AppUser"
            useGeneratedKeys="true"
            keyProperty="id">
        insert into `user` (id, user_id, user_name)
        values (#{id}, #{userId}, #{userName})
    </insert>

    <!-- 获取列表 -->
    <select id="userList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from `user`
        order by user_id
    </select>

    <!-- 根据 id 删除用户 -->
    <delete id="deleteUser" parameterType="java.lang.Integer">
        delete
        from `user`
        where id = #{id}
    </delete>
</mapper>